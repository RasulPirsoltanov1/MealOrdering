@page "/userList";
@inherits UserListProcess;
@using MealOrdering.Client.PageProcess.User;


<div class="btn-group">

    <div class="container">
        <AddNewButtonComponent OnClick="AddUser" Caption="Add New User"></AddNewButtonComponent>
    </div>

</div>
<h3>UserList</h3>
<button class="btn btn-primary" @onclick="LoadList"> click for refresh list</button>
@if (serviceResponse == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name and Surname</th>
                <th>CreateDate</th>
                <th>IsActive</th>
                <th>Email</th>
                <th>Edit</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var forecast in serviceResponse)
            {
                <tr>
                    <td>@forecast.Id</td>
                    <td>@forecast.FullName</td>
                    <td>@forecast.CreateDate</td>
                    <td>@forecast.IsActive</td>
                    <td>@forecast.Email</td>
                    <td><EditButtonComponent OnClick="(()=>UpdateUser(forecast.Id))"></EditButtonComponent></td>
                </tr>
            }
        </tbody>
    </table>
}


